pipeline {
    agent any
    stages {
        stage('Deploy to Dev Cluster'){
            when {
                branch 'develop'
                }
            steps {
                sh 'cd ${WORKSPACE}/resource-manifests-prod/ && kubectl apply -f .'

            }
        }
        stage('Deploy to Prod Cluster'){
            when {
                branch 'master'
                }
            steps {
                sh 'cd ${WORKSPACE}/resource-manifests-prod/ && kubectl apply -f .'

            }
        }
    }
}